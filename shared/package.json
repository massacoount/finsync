{
  "name": "@finsync/shared",
  "version": "1.0.0",
  "description": "Shared models and types for FinSync",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "generate:client": "openapi-generator-cli generate -i openapi/api.yaml -g typescript-axios -o generated/client",
    "generate:server": "openapi-generator-cli generate -i openapi/api.yaml -g nodejs-express-server -o generated/server",
    "generate": "npm run generate:client && npm run generate:server && npm run build",
    "prepare": "npm run generate"
  },
  "dependencies": {
    "axios": "^1.6.7"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.7.0",
    "typescript": "^5.3.3"
  }
}